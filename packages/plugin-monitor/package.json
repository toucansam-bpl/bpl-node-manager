{
  "name": "@toucansam-bpl/plugin-monitor",
  "description": "Monitors BPL node to ensure it stays in sync",
  "version": "1.0.4-alpha.0",
  "author": "toucansam",
  "bugs": "https://github.com/toucansam-bpl/plugin-monitor/issues",
  "dependencies": {
    "@oclif/command": "^1.5.12",
    "@oclif/config": "^1.12.12",
    "@toucansam-bpl/cli-shared": "^1.0.4-alpha.0",
    "@types/node-fetch": "^2.3.2",
    "node-fetch": "^2.3.0",
    "pm2": "^3.5.0",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.22.0",
    "@oclif/plugin-help": "^2.1.6",
    "@oclif/tslint": "^3.1.1",
    "@types/node": "^10.14.4",
    "globby": "^8.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.15.0",
    "typescript": "^3.4.3"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json",
    "/yarn.lock"
  ],
  "homepage": "https://github.com/toucansam-bpl/plugin-monitor",
  "keywords": [
    "oclif-plugin"
  ],
  "license": "MIT",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "oclif-example",
    "devPlugins": [
      "@oclif/plugin-help"
    ],
    "topics": {
      "monitor:logs": {
        "description": "Shows the logs for the BPL Node monitor process"
      },
      "monitor:run": {
        "description": "Checks the BPL Node process to see if it in sync and forging"
      },
      "monitor:start": {
        "description": "Starts the BPL Node monitor"
      },
      "monitor:stop": {
        "description": "Stops the BPL Node monitor"
      }
    }
  },
  "repository": "toucansam-bpl/plugin-monitor",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "postinstall": "npx pm2 install typescript",
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "tslint -p . -t stylish",
    "prepack": "rm -rf lib && tsc -b --force && oclif-dev manifest && oclif-dev readme",
    "test": "echo NO TESTS",
    "version": "oclif-dev readme && git add README.md"
  }
}
